 <% include nav.ejs %>

<main>
    <div class="container">
<div class="row">
    <div class="col s12 m8">
            <h6><%= show.location %></h6>
        <div class="card image">
            <img src="<%= show.image %>" class="responsive-img">
        </div>
        <div class="card-content">
            <p><%= show.body %></p>
            <p class="green-text"><%= show.price %></p>
            <p><%= show.date %></p>
        </div>
        <div class="card-action">
            <form action="/landlord/charge" method="POST">
                <script
                  src="https://checkout.stripe.com/checkout.js"
                  class="stripe-button"
                  data-key="pk_test_yxteCsM13ODV0UiH04LlkLCq00D252g2CM"
                  data-name="Airbnb"
                  data-description="Comfortable cotton t-shirt"
                  data-amount="10000"
                  data-currency="ZAR">
                </script>
                <script>
                    document.getElementsByClassName('stripe-button-el')[0]
                    .style.display = 'none';
                </script>
                <button type="submit" class="btn btn-green text-white btn-lg">Checkout</button>
              </form>
        </div>
    </div>
    
    <div class="col s12 m4">
        <div class="card center-align">
            <div class="card-content">
                <span class="card-title"><%= show.user.username %></span>
                <img src="<%= show.user.image %>" class= "responsive-img circle">
            </div>
        </div>
    </div>
</div>

</div>
</main>
<% include footer.ejs %>
