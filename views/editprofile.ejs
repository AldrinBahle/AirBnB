<% include nav.ejs %>

<div class="container mb-3">
        <div class="col-md-6 mx-auto">    
               <p>Contact :<% user.contact %></p>
        <h3 class="center">Update Profile</h3>
        <form action ="/profile/editprofile/<%= user._id %>?_method=PUT" method ="POST" >
                <input type="hidden" name="_method" value="put">

                <div class="file-field input-field">
                <div class="btn-small">
                        <span>File</span>
                        <input type="file" multiple>
                </div>
                <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Upload one or more files">
                </div>
                </div>
            <div class="input-field">
                    <i class="material-icons prefix black-text">profile</i>
                    <input type="text" name = "username" value="<%= user.username %>" placeholder="Username">
                 
            </div>
            <div class="input-field">
                    <i class="material-icons prefix black-text">profile</i>
                    <input type="text" name = "email" value = "<%= user.email %>" placeholder="Email">
                  
            </div>
         
            <div class="input-field">
                    <i class="material-icons prefix black-text">profile</i>
                    <input type="text" name = "location" value = "<%= user.location %>" placeholder="location">
            </div>
         
        <!-- <input type="submit" class="btn green right btn-small" value="Sign Up"> -->

        <button class="btn btn-dark btn-block">Update</button>
    </div>
</div>
</form>

        
